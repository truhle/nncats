<%= form_for @cat do |f| %>
  <%= render "shared/errors", object: @cat %>
<br><br>
  <fieldset>
    <legend><strong>Register Your Cat</strong></legend>
    <p>
      <%= f.label :name, "Your Cat's Name" %><br/>
      <%= f.text_field :name, autofocus: true %>
    </p>

    <p>
      <%= f.label :sex %><br/>
      <%= f.radio_button :sex, 'M' %> Male
      <%= f.radio_button :sex, 'F' %> Female
    </p>

    <p>
      <%= f.label :color %><br/>
      <%= f.select :color, Cat::COLORS, include_blank: true %>
    </p>

    <p>
      <%= f.label :birth_date, "Birth Date (Year-Month-Day)" %><br/>
      <%= f.date_field :birth_date %>
    </p>

    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description, cols: 40, rows: 7 %>
    </p>

    <p>
      <%= f.submit %>
      <%= link_to "Cancel", cats_path %>
    </p>

  </fieldset>

<% end %>
