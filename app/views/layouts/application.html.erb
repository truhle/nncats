<!DOCTYPE html>
<html>
<head>
  <title>Nncats</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <% unless current_user.blank? %>
    <div>

    <div style="float:left;">

    <h2><%= link_to current_user.user_name, root_path %></h2>
    </div>
    <div style="float: left; margin-top: 23px; margin-left: 10px;">

    <%= button_to "Logout", session_path, method: :delete %>
    </div>
    <div style="float: left; margin-top: 23px; margin-left: 10px;">

    <%= button_to "All Sessions", user_user_sessions_path(current_user.id), method: :get %>
    </div>
    <div style="clear:both; margin-bottom: -20px;">

    </div>
    </div>
  <% else %>
    <%= button_to "Login", new_session_path,  method: :get  %>
  <% end %>

</header>
<%= yield %>

</body>
</html>
